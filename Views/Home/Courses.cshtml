@model Uppgift2.Models.CourseModel

@{
    ViewData["Title"] = "Courses";
}

<h2 class="txt">ADD COURSE</h2>

<form asp-controller="Home" asp-action="Courses" method="post">
    <div class="input-container">
        <i class="icon"></i>
        <input asp-for="Code" placeholder="Course Code" class="input-field" required />
    </div>
    <div class="input-container">
        <i class="icon"></i>
        <input asp-for="Name" placeholder="Course Name" class="input-field" required />
    </div>
    <div class="input-container">
        <i class="icon"></i>
        <input asp-for="Url" placeholder="Url" class="input-field" required />
    </div>
    <div class="input-container">
        <i class="icon"></i>
        <select asp-for="Progression" class="input-field">
            <option value="0">Choose a progression</option>
            <option value="A">A</option>
            <option value="B">B</option>
        </select>
    </div>
    <input type="submit" value="ADD COURSE" class="btn" />
</form>

<table>
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Course link</th>
            <th>Progression</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in ViewBag.Courses)
        {
            <tr>
                <td>@course.Code</td>
                <td>@course.Name</td>
                <td>@course.Url</td>
                <td>@course.Progression</td>
            </tr>
        }
    </tbody>
</table>